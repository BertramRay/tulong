    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/tulong_api/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger"
            ],
            "jinja": true
        },
        {
            "name": "Python: test extract",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test.extract.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: test detect",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test.detect.py",
            "console": "integratedTerminal"
        }
    ]
}